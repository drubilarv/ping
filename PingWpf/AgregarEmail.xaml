        <Label Content="Rut" HorizontalAlignment="Left" Margin="160,41,0,0" VerticalAlignment="Top" Height="26" Width="28"/>
        <Label Content="Nombre" HorizontalAlignment="Left" Margin="132,85,0,0" VerticalAlignment="Top" Height="31" Width="58"/>
